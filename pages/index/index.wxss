.mid-title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #373737;
  padding: 14rpx 0 0 20rpx;
  background-color: #fff;
}

.classify-group {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  padding-bottom: 20rpx;
  margin-bottom: 10rpx;
}

.classify-group>.classify-item {
  float: left;
  position: relative;
}

.classify-item {
  width: 156rpx;
  height: 156rpx;
  /*padding: 38rpx 62rpx;*/
  margin-left: 26rpx;
  margin-top: 28rpx;
  line-height: 156rpx;
}

.classify-item>image {
  width: 100%;
  height: 100%;
}

.classify-item text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  letter-spacing: 0.16px;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 10;
  color: #fff;
}

.commodity-content {
  float: left;
  padding: 10rpx 12rpx 0;
  height: 220px;
  background-color: #fff;
}

.commodity-img {
  float: left;
  height: 140rpx;
  width: 140rpx;
  margin-right: 20rpx;
}

.commodity-big-img {
  width: 350rpx;
  height: 350rpx;
  background-color: #e3e3e3;
}

.commodity-big-img  image {
  width: 100%;
  height: 100%;
}

.commodity-fullname {
  font-size: 24rpx;
  color: #000;
  letter-spacing: 0px;
  text-align: left;
  position: relative;
  top: 8rpx;
  width: 350rpx;
  height: 32rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.commodity-price {
  font-size: 30rpx;
  color: rgb(225, 102, 51);
  padding-right: 10rpx;
}

.old-price {
  text-decoration: line-through;
  color: #bbb;
}

.price_count {
  font-size: 24rpx;
  padding: 20rpx 0;
}

.hot_commodities {
  font-size: 12px;
  color: orange;
  text-align: center;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.hot_commodities>text {
  display: inline-block;
  padding: 20rpx 0;
  border-bottom: 0.5px solid #f2f2f2;
}

.contact {
  position: fixed;
  right: 11px;
  bottom: 7px;
}
