.clear {
  clear: both;
}

.lf {
  float: left;
}

.rt {
  float: right;
}

.user {
  box-sizing: border-box;
  height: 250rpx;
  text-align: center;
  padding-top: 40rpx;
  background: linear-gradient(to right, rgb(245, 94, 99), rgb(244, 75, 70));
}

.portrait {
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
}

.nickname {
  font-size: 10pt;
  color: #fff;
}

.about {
  padding-left: 20rpx;
  background-color: #fff;
}

.about>view {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  font-size: 32rpx;
}

.about>view image {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 26rpx;
  right: 20rpx;
}

.about .myOrders {
  height: 270rpx;
}

.order-title, .myInfo, .aboutUs, .contactUs, .order-content, .myOrders {
  box-sizing: border-box;
  border-bottom: 1px solid #d8d8d8;
}

.order-content {
  height: 180rpx;
  padding: 20rpx 0;
}

.order-content>view {
  width: 140rpx;
  height: 140rpx;
  float: left;
  box-sizing: border-box;
  margin: 0 48rpx;
  position: relative;
}

.order-content>view image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
}

.order-content>view text {
  font-size: 28rpx;
  position: absolute;
  bottom: -20rpx;
  left: 20rpx;
}
