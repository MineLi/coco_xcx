.username, .phonenumber {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  margin-top: 20rpx;
  border: 2px solid #d8d8d8;
  border-radius: 10rpx;
}

.username text, .phonenumber text {
  width: 160rpx;
  text-align: center;
  background-color: #d8d8d8;
  padding: 10rpx 0;
}

.username input, .phonenumber input {
  padding-left: 20rpx;
}

.line {
  text-align: center;
  padding-top: 20rpx;
}

.tishi {
  font-size: 24rpx;
  color: #aaa;
}

.tishi:before, .tishi:after {
  /*content: "---------------------------";*/
  content: "···························";
}

.btn-content {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 10rpx;
  background-color: rgb(245, 245, 245);
}

.confirmpay {
  /*width: 92%;*//*width: 100%;*/
  width: 730rpx;
  background-color: rgb(231, 66, 64);
  color: #fff;
  box-sizing: border-box;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 0.5px solid #d8d8d8;
}
