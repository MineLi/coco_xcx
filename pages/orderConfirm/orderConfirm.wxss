/* pages/orderConfirm/orderConfirm.wxss */

.clear {
  clear: both;
}

.lf {
  float: left;
}

.rt {
  float: right;
}

.orders {
  height: 100%;
}

.order-content {
  padding: 10rpx 10rpx 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #d8d8d8;
}

.orderMain {
  margin-bottom: 10rpx;
}

.btnContent {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background-color:#fff;
}

.btns {
  float: right;
}

.cancel, .confirm {
  width: 160rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 28rpx;
  display: inline-block;
  background-color: transparent;
  text-align: center;
  border-radius: 10rpx;
  border: 0.5px solid #d8d8d8;
}

.confirm {
  width: 120rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  color: rgb(225, 102, 51);
  border: 1px solid rgb(225, 102, 51);
}

.order-content:first-child {
  border-top: 1px solid #d8d8d8;
}

.order-state {
  padding: 10rpx;
  font-size: 30rpx;
}

.order-big-img {
  width: 150rpx;
  height: 150rpx;
}

.order-big-img image {
  width: 100%;
  height: 100%;
}

.order-detail {
  width: 550rpx;
  height: 150rpx;
}

.order-detail .name {
  height: 100rpx;
  line-height: 50rpx;
}

.commodity-price {
  font-size: 40rpx;
  color: rgb(225, 102, 51);
  padding-right: 10rpx;
}

.old-price {
  text-decoration: line-through;
  color: #bbb;
  font-size: 30rpx;
}
