.order-content:first-child {
  border-top: 1px solid #d8d8d8;
}

.order-state {
  padding: 10rpx;
  font-size: 30rpx;
}

.order-big-img {
  width: 150rpx;
  height: 150rpx;
}

.order-big-img image {
  width: 100%;
  height: 100%;
}

.order-detail {
  width: 550rpx;
  height: 150rpx;
  font-size: 28rpx;
}

.order-detail .name {
  height: 100rpx;
  line-height: 50rpx;
}

.commodity-price {
  font-size: 36rpx;
  color: rgb(225, 102, 51);
  padding-right: 10rpx;
}

.old-price {
  text-decoration: line-through;
  color: #bbb;
  font-size: 30rpx;
}

